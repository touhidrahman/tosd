<div class="container">
    {{#if messages.success}}
    <div class="text-success">
        {{#each messages.success}}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>{{msg}}</strong>
        </div>
        {{/each}}
    </div>
    {{/if}} {{#if messages.error}}
    <div class="text-danger">
        {{#each messages.error}}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>{{msg}}</strong>
        </div>
        {{/each}}
    </div>
    {{/if}} {{#if messages.info}}
    <div class="text-info">
        {{#each messages.info}}
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>{{msg}}</strong>
        </div>
        {{/each}}
    </div>
    {{/if}}
    <h1><b>Flight</b> Search</h1>
    <form id="searchForm" method="GET" action="search">

        <!-- row 1 -->
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-6" style="text-align:right">
                        <input type="radio" name="TT" id="TT_RT" value="RT" checked />
                        <label for="TT_RT" class="selected" title="Select If Round Trip" alt="Round Trip">ROUND</label>
                    </div>
                    <div class="col-xs-6">
                        <input type="radio" name="TT" id="TT_OW" value="OW" />
                        <label for="TT_OW" title="Select If One Way Trip" alt="One Way Trip">ONE WAY</label>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <!-- row 2 -->
        <div class="row">
            <div class="col-xs-6">
                <div class="from-part">
                    <div class="styled-select">
                        <select name="DC" title="Select Departing Airport" alt="From">
                        <option value="" selected>FROM</option>
                        <option value="FRA">Frankfurt (FRA)</option>
                        <option value="MUC">Munich (MUN)</option>
                        <option value="TXL">Berlin (TXL)</option>
                        {{!--<option value="DUS">Düsseldorf</option>
                        <option value="HAM">Hamburg</option>
                        <option value="STR">Stuttgart</option>
                        <option value="CGN">Cologne</option>--}}
                    </select>
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="to-part">
                    <div class="styled-select">
                        <select name="AC" title="Select Destination Airport" alt="To">
                        <option value="" selected>TO</option>
                        <option value="FRA">Frankfurt (FRA)</option>
                        <option value="MUC">Munich (MUN)</option>
                        <option value="TXL">Berlin (TXL)</option>
                        {{!--<option value="DUS">Düsseldorf</option>
                        <option value="HAM">Hamburg</option>
                        <option value="STR">Stuttgart</option>
                        <option value="CGN">Cologne</option>--}}
                    </select>
                    </div>
                </div>
            </div>
        </div>


        <!-- date row -->
        <div class="row">
            <div class="col-xs-6">
                <input type="text" name="DD" id="from-date" class="form-control" placeholder="DEPARTING DATE (YYYY-MM-DD)" title="Select Departing Date"
                    alt="Departing Date">
            </div>
            <div class="col-xs-6">
                <input type="text" name="RD" id="to-date" class="form-control" placeholder="RETURNING DATE (YYYY-MM-DD)" title="Select Returning Date"
                    alt="Returning Date">
            </div>
        </div>
        <br>
        <!-- row pax  -->
        <div class="row">
            <div class="col-xs-4">
                <input type="text" name="PA" id="PA" class="form-control" placeholder="ADULT (12+ YRS)" title="Enter number of adult passengers">
            </div>
            <div class="col-xs-4">
                <input type="text" name="PC" id="PC" class="form-control" placeholder="CHILD (2-12 YRS)" title="Enter number of childs">
            </div>
            <div class="col-xs-4">
                <input type="text" name="PI" id="PI" class="form-control" placeholder="INFANT (0-2 YRS)" title="Enter number of childs">
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <input type="submit" value="SEARCH" class="btn btn-block btn-danger">
            </div>
        </div>
    </form>

</div>